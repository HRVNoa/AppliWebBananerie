{% extends 'base.html.twig' %}
{% block title %}Liste des Membre{% endblock %}
{% block script %}
        function confirmSuppression() {
            return confirm("Êtes-vous sûr de vouloir supprimer cette bourse, l'utilisateur, l'indépendant et/ou l'entreprise qui vont avec cet bourse?");
        }
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-sm-flex align-items-center justify-content-between">
                <h4 class="m-0 font-weight-bold text-primary">Liste des Bourses</h4>
                <a href="{{ path('bourseAjouter') }}" class="btn btn-primary btn-icon-split ">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-flag"></i>
                                        </span>
                    <span class="text">Ajouter une bourse</span>
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable">
                        <thead>
                        <tr>
                            <th>User</th>
                            <th>Quantité de B.Coins</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for bourse in pBourses %}
                            <tr>
                                <td>{{ bourse.user.email }}</td>
                                <td>{{ bourse.quantite }}</td>
                                <td>
                                    <a href="{{ path('bourseModifier', {'id': bourse.id}) }}" class="btn btn-warning btn-icon-split btn-sm">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-exclamation-triangle"></i>
                                        </span>
                                        <span class="text">Modifier</span>
                                    </a>
                                    <a href="{{ path('bourseSupprimer', {'id': bourse.id}) }}" class="btn btn-danger btn-icon-split btn-sm" onclick="return confirmSuppression();">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-trash"></i>
                                        </span>
                                        <span class="text">Supprimer</span>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
