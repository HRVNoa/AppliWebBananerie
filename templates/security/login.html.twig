    <!-- Layout styles -->
    <link rel="stylesheet" href="{{ asset("/design/assets/css/style.css")}}">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="{{ asset("/design/assets/images/favicon.png")}}" />
</head>

<body>
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
            <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                <div class="card col-lg-4 mx-auto">
                    <div class="card-body px-5 py-5">
                        <h3 class="card-title text-left mb-3">Login</h3>
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                                </div>
                            {% endif %}

                            <h1 class="h3 mb-3 font-weight-normal">Connectez-vous </h1>
                            <div class="form-group">
                            <label for="inputEmail">Email *</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control p_input text-white" autocomplete="email" required autofocus>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword">Mot de passe *</label>
                                <input type="password" name="password" id="inputPassword" class="form-control text-white" autocomplete="current-password" required>
                            </div>
                            <div class="form-group d-flex align-items-center justify-content-between">
                                <a href="#" class="forgot-pass">Mot de passe oublié?</a>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="text-center">
                             <button class="btn btn-primary btn-block enter-btn" type="submit">
                                 Connexion
                              </button>
                            </div>
                        </form>
                        <p class="sign-up">Pas encore de compte?<a href="{{ path('choixInscription') }}"> S'inscrire</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- container-scroller -->
