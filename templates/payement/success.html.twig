
{% extends 'base.html.twig' %}

{% block title %}Votre commande est un succès!{% endblock %}

{% block body %}
    <div class="card">
        <div class ="card-body">
            {% if app.user.independant %}
            <H3>
                Merci votre commande de {{ quantite }} B.Coins est un succès {{ app.user.independant.nom }} {{ app.user.independant.prenom }} !
            </H3>
            {% elseif app.user.entreprise %}
            <H3>
                Merci votre commande de {{ quantite }} B.Coins est un succès {{ app.user.entreprise.nom }} {{ app.user.entreprise.prenom }} !
            </H3>
            {% else %}
            <H3>
                Merci votre commande de {{ quantite }} B.Coins est un succès !
            </H3>
            {% endif %}
        </div>
    </div>
{% endblock %}
