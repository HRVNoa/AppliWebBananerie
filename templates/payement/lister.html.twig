{% extends 'base.html.twig' %}
{% block title %}Liste des metiers{% endblock %}
{% block stylesheets %}{% endblock %}
{% block body %}
    {% for message in app.flashes('success') %}
        <div class="card bg-success text-white shadow" style="margin-bottom: 20px">
            <div class="card-body">
                Success
                <div class="text-white">{{ message }}</div>
            </div>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="card bg-danger text-white shadow" style="margin-bottom: 20px">
            <div class="card-body">
                Erreur
                <div class="text-white">{{ message }}</div>
            </div>
        </div>
    {% endfor %}
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="" style="display: flex; justify-content: space-between">
                    <h4 class="card-title">Liste des achats</h4>
                    <a href="{{ path('payementAjouter') }}" class="btn btn-primary btn-fw m-1">Ajouter un paiement</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th> User </th>
                                <th> Nom </th>
                                <th> Entreprise </th>
                                <th> Tel </th>
                                <th> B.Coins achet√© </th>
                                <th> Actions </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for paiement in paiements %}
                                <tr>
                                    <td>{{ paiement.dateAchat|date("d/m/Y") }}</td>
                                    <td>{{ app.user.email }}</td>
                                    <td>{{ paiement.prenom }} {{ paiement.nom }}</td>
                                    <td>{{ paiement.entreprise }}</td>
                                    <td>{{ paiement.tel }}</td>
                                    <td>{{ paiement.tarif.quantite }}</td>
                                    <td>
                                        <form action="{{ path('payementModifier', {'id': paiement.id}) }}" method="post" class="flex-c-c">
                                            <input type="hidden" name="_method" value="UPDATE">
                                            <button type="submit" class="btn btn-outline-primary">Modifier</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}