{% extends 'base.html.twig' %}
{% block title %}Ajouter Metier {% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h4 class="h4 text-gray-900 mb-4">Ajouter un Paiement</h4>
                                    </div>
                                    {{ form_start(form) }}
                                    {{ form_row(form.dateAchat) }}
                                    {{ form_row(form.nom) }}
                                    {{ form_row(form.prenom) }}
                                    {{ form_row(form.entreprise) }}
                                    {{ form_row(form.email) }}
                                    {{ form_row(form.tel) }}
                                    {{ form_row(form.adresse) }}
                                    {{ form_row(form.tarif) }}
                                    {{ form_row(form.Statut) }}
                                    {{ form_row(form.metier) }}
                                    {{ form_row(form.enregistrer) }}
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}