{% extends 'base.html.twig' %}

{% block title %}Annuaire{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Annuaire</h4>
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ENTREPRISE')%}
                    <div class="form-group">
                        <div class="row flex-c-b">
                            <div class="col-lg-2">
                                <select id="filterMetier" class="form-control" style="color: #6c7293;">
                                    <option value="">Filtre métiers</option>
                                    {% for metier in metiers %}
                                        <option value="{{ metier.id }}" style="color: #fff;">{{ metier.libelle }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-lg-4">
                                <input type="text" id="searchField" class="form-control" placeholder="Rechercher par nom, prénom, métier..." style="color: #6c7293;">
                            </div>
                        </div>

                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th>Profil</th>
                                <th>Prénom Nom
                                    {% set currentSort = app.request.get('sort') %}
                                    {% if currentSort == 'desc' %}
                                        <a href="{{ path('annuaireLister', {'sort': 'asc'}) }}"><i class="mdi mdi-arrow-up-drop-circle-outline"></i></a>
                                    {% else %}
                                        <a href="{{ path('annuaireLister', {'sort': 'desc'}) }}"><i class="mdi mdi-arrow-down-drop-circle-outline"></i></a>
                                    {% endif %}
                                </th>
                                <th>Métier principal</th>
                                <th>Métier secondaire</th>
                                <th>Tags</th>
                                <th style="display: none">TagNormal</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for independant in independants %}
                                <tr onclick="window.location.href='{{ path('independantConsulter', {"id": independant.id}) }}'" style="cursor: pointer" data-metier-id="{{ independant.metier.id }}">
                                    <td class="py-1">
                                        <img src="{{ asset('design/assets/images/faces/face15.jpg') }}" alt="image">
                                    </td>
                                    <td>{{ independant.prenom|capitalize }} {{ independant.nom|upper }}</td>
                                    <td>{{ independant.metier.libelle }}</td>
                                    <td>{{ independant.metierSecondaire.libelle }}</td>
                                    <td>
                                        {% for independantTag in independant.independantTags %}
                                            {% if independantTag.super == 1 %}
                                                <button type="button" class="btn btn-outline-secondary btn-sm text-secondary" style="border-color: var(--bs-secondary-rgb); cursor: default;">{{ "#" ~ independantTag.tag.libelle }}</button>
                                            {% endif %}
                                        {% else %}
                                            Pas de tag
                                        {% endfor %}
                                    </td>
                                    <td style="display: none">
                                        {% for independantTag in independant.independantTags %}
                                            <button type="button" class="btn btn-outline-secondary btn-sm text-secondary" style="border-color: var(--bs-secondary-rgb); cursor: default;">{{ "#" ~ independantTag.tag.libelle }}</button>
                                        {% else %}
                                            Pas de tag
                                        {% endfor %}
                                    </td>
                                    <td><i class="mdi mdi-eye"></i></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                        {% elseif app.user.independant.annuaire %}
                            <div class="form-group">
                                <div class="row flex-c-b">
                                    <div class="col-lg-2">
                                        <select id="filterMetier" class="form-control" style="color: #6c7293;">
                                            <option value="">Filtre métiers</option>
                                            {% for metier in metiers %}
                                                <option value="{{ metier.id }}" style="color: #fff;">{{ metier.libelle }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="col-lg-4">
                                        <input type="text" id="searchField" class="form-control" placeholder="Rechercher par nom, prénom, métier..." style="color: #6c7293;">
                                    </div>
                                </div>

                            </div>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>Profil</th>
                                        <th>Prénom Nom
                                            {% set currentSort = app.request.get('sort') %}
                                            {% if currentSort == 'desc' %}
                                                <a href="{{ path('annuaireLister', {'sort': 'asc'}) }}"><i class="mdi mdi-arrow-up-drop-circle-outline"></i></a>
                                            {% else %}
                                                <a href="{{ path('annuaireLister', {'sort': 'desc'}) }}"><i class="mdi mdi-arrow-down-drop-circle-outline"></i></a>
                                            {% endif %}
                                        </th>
                                        <th>Métier principal</th>
                                        <th>Métier secondaire</th>
                                        <th>Tags</th>
                                        <th style="display: none">TagNormal</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for independant in independants %}
                                        <tr onclick="window.location.href='{{ path('independantConsulter', {"id": independant.id}) }}'" style="cursor: pointer" data-metier-id="{{ independant.metier.id }}">
                                            <td class="py-1">
                                                <img src="{{ asset('membre/photodeprofil/') }}{{ independant.photodeprofil }}" alt="image">
                                            </td>
                                            <td>{{ independant.prenom|capitalize }} {{ independant.nom|upper }}</td>
                                            <td>{{ independant.metier.libelle }}</td>
                                            <td>{{ independant.metierSecondaire.libelle }}</td>
                                            <td>
                                                {% for independantTag in independant.independantTags %}
                                                    {% if independantTag.super == 1 %}
                                                        <button type="button" class="btn btn-outline-secondary btn-sm text-secondary" style="border-color: var(--bs-secondary-rgb); cursor: default;">{{ "#" ~ independantTag.tag.libelle }}</button>
                                                    {% endif %}
                                                {% else %}
                                                    Pas de tag
                                                {% endfor %}
                                            </td>
                                            <td style="display: none">
                                                {% for independantTag in independant.independantTags %}
                                                    <button type="button" class="btn btn-outline-secondary btn-sm text-secondary" style="border-color: var(--bs-secondary-rgb); cursor: default;">{{ "#" ~ independantTag.tag.libelle }}</button>
                                                {% else %}
                                                    Pas de tag
                                                {% endfor %}
                                            </td>
                                            <td><i class="mdi mdi-eye"></i></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                    {% else %}
                        <h5>Pour avoir accès a l'annuaire merci d'aller sur votre profil et de remplir les informations suivantes : <br><br></h5>
                        <p> Photo de Profil <br><br>
                            Avoir vos 3 super Tags <br><br>
                            Ensuite remplir le profil <br><br>
                            Pour cela rendez-vous dans la bar a gauche, cliquer sur Mon Compte puis Mon Profil.
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>

    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const filterMetier = document.getElementById("filterMetier");
            const searchField = document.getElementById("searchField");

            const rows = document.querySelectorAll("tbody tr");

            filterMetier.addEventListener("change", function () {
                const selectedMetierId = filterMetier.value;

                rows.forEach(function (row) {
                    const metierId = row.getAttribute("data-metier-id");

                    if (selectedMetierId === "" || selectedMetierId === metierId) {
                        row.style.display = "table-row";
                    } else {
                        row.style.display = "none";
                    }
                });
            });
            searchField.addEventListener("input", function () {
                const searchValue = searchField.value.toLowerCase();

                rows.forEach(function (row) {
                    const nomPrenom = row.cells[1].textContent.toLowerCase();
                    const metierPrincipal = row.cells[2].textContent.toLowerCase();
                    const metierSecondaire = row.cells[3].textContent.toLowerCase();
                    const tags = row.cells[4].textContent.toLowerCase();
                    const tagsNormal = row.cells[5].textContent.toLowerCase();

                    if (nomPrenom.includes(searchValue) || metierPrincipal.includes(searchValue) || metierSecondaire.includes(searchValue) || tags.includes(searchValue) || tagsNormal.includes(searchValue)) {
                        row.style.display = "table-row";
                    } else {
                        row.style.display = "none";
                    }
                });
            });
        });


    </script>

{% endblock %}
