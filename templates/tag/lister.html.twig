{% extends 'base.html.twig' %}
{% block title %}Liste des tags{% endblock %}
{% block stylesheets %}{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste Tags</h4>
                    <form action="{{ path('tagAjouter') }}" method="get">
                        <button type="submit" class="btn btn-primary">Ajouter un nouveau tag</button>
                    </form>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th style="text-align: left;"> Libelle </th>
                                <th style="text-align: center;"> Modifier </th>
                                <th style="text-align: center;"> Supprimer </th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for t in tags %}
                                <tr>
                                    <td style="text-align: left;" class="text-white">{{ t.libelle }}</td>
                                    <td>
                                        <form action="{{ path('tagModifier', {'id': t.id}) }}" method="post" class="flex-c-c">
                                            <input type="hidden" name="_method" value="UPDATE">
                                            <button type="submit" class="btn btn-outline-primary">Modifier</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form action="{{ path('tagSupprimer', {'id': t.id}) }}" method="post" class="flex-c-c">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-outline-primary">Supprimer</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}