<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}{% endblock %}</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="{{ asset("/design/assets/vendors/mdi/css/materialdesignicons.min.css")}}">
    <link rel="stylesheet" href="{{ asset("design/assets/vendors/css/vendor.bundle.base.css")}}">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="{{ asset("design/assets/vendors/jvectormap/jquery-jvectormap.css")}}">
    <link rel="stylesheet" href="{{ asset("design/assets/vendors/flag-icon-css/css/flag-icon.min.css")}}">
    <link rel="stylesheet" href="{{ asset("design/assets/vendors/owl-carousel-2/owl.carousel.min.css")}}">
    <link rel="stylesheet" href="{{ asset("design/assets/vendors/owl-carousel-2/owl.theme.default.min.css")}}">
    <link rel="stylesheet" href="{{ asset("design/assets/css/style.css")}}" >
    <link rel="shortcut icon" href="{{ asset("design/assets/images/favicon.png")}}" />
    {% block stylesheets %}
    <style>
        .aspectlogo{
            object-fit: cover;
            aspect-ratio: 500/166;
        }

    </style>
    {% endblock %}
</head>
<body>
<div class="container-scroller">
    <!-- partial:partials/_sidebar.html -->
    <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
            <a class="sidebar-brand brand-logo" href="{{ path('accueilIndex') }}"><img src="{{ asset("design/admin/logo/BlancSimple.png")}}" alt="logo" class="aspectlogo"/></a>
            <a class="sidebar-brand brand-logo-mini" href="{{ path('accueilIndex') }}"><img src="{{ asset("design/admin/logo/BlancSimple.png")}}" alt="logo" /></a>
        </div>
        <ul class="nav">
            <li class="nav-item menu-items">
                <a class="nav-link" href="/">
              <span class="menu-icon">
                <i class="mdi mdi-table" style="font-size: 20px"></i>
              </span>
                    <span class="menu-title">Réservations</span>
                </a>
            </li>
            {% if is_granted('ROLE_ADMIN') %}

            {% else %}
            <li class="nav-item menu-items">
                <a class="nav-link" data-bs-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
              <span class="menu-icon">
                <i class="mdi mdi-account-outline" style="font-size: 20px"></i>
              </span>
                    <span class="menu-title">Mon Compte</span>
                    <i class="menu-arrow"></i>
                </a>
                <div class="collapse" id="ui-basic">
                    <ul class="nav flex-column sub-menu">
                        <li class="nav-item">
                            {% if app.user.entreprise %}
                                <a class="nav-link" href="{{ path('entrepriseConsulter',{"id":app.user.entreprise.id}) }}">Mon Profil</a>
                            {% elseif app.user.independant %}
                                <a class="nav-link" href="{{ path('independantConsulter',{"id":app.user.independant.id})}}">Mon Profil</a>
                            {% else %}
                                <a class="nav-link" href="/">Mon Profil</a>
                            {% endif %}
                        </li>
                        <li class="nav-item"> <a class="nav-link" href="{{ asset("design/pages/ui-features/typography.html")}}">Relevé de compte</a></li>
                    </ul>
                </div>
            </li>
            {% endif %}
            <li class="nav-item menu-items">
                <a class="nav-link" href="{{ path('annuaireLister') }}">
              <span class="menu-icon">
                <i class="mdi mdi-table-large" style="font-size: 20px"></i>
              </span>
                    <span class="menu-title">Annuaire</span>
                </a>
            </li>
            {% if is_granted('ROLE_ADMIN') %}

            <li class="nav-item menu-items">
                <a class="nav-link" data-bs-toggle="collapse" href="#auth" aria-expanded="false" aria-controls="auth">
              <span class="menu-icon">
                <i class="mdi mdi-worker" style="font-size: 20px"></i>
              </span>
                    <span class="menu-title">Admin</span>
                    <i class="menu-arrow"></i>
                </a>
                <div class="collapse" id="auth">
                    <ul class="nav flex-column sub-menu">
                        <li class="nav-item"> <a class="nav-link" href="{{ path('independantLister') }}"> Indépendants </a></li>
                        <li class="nav-item"> <a class="nav-link" href="{{ path('entrepriseLister') }}"> Entreprises </a></li>
                        <li class="nav-item"> <a class="nav-link" href="{{ path('annuaireControl') }}"> Annuaire </a></li>
                        <li class="nav-item"> <a class="nav-link" href="{{ path('adminReservation') }}"> Réservations </a></li>
                        <li class="nav-item"> <a class="nav-link" href="{{ path('adminEspace') }}"> Espaces </a></li>
                        <li class="nav-item"> <a class="nav-link" href="{{ path('statutLister') }}"> Statut </a></li>
                        <li class="nav-item"> <a class="nav-link" href="{{ path('metierLister') }}"> Métiers </a></li>
                        <li class="nav-item"> <a class="nav-link" href="{{ path('secteuractiviteLister') }}"> Secteurs </a></li>
                        <li class="nav-item"> <a class="nav-link" href="{{ path('tagLister') }}"> Tags </a></li>
                        <li class="nav-item"> <a class="nav-link" href="{{ path('newmemberLister') }}"> Utilisateurs </a></li>
                        <li class="nav-item"> <a class="nav-link" href="{{ path('adminLister') }}"> Admin </a></li>
                        <li class="nav-item"> <a class="nav-link" href="{{ path('bourseLister') }}"> Bourse </a></li>
                        <li class="nav-item"> <a class="nav-link" href="{{ path('contactMousquetaires') }}"> Mousseketères </a></li>

                    </ul>
                </div>
            </li>
            {% endif %}
        </ul>
    </nav>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar p-0 fixed-top d-flex flex-row">
            <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                <a class="navbar-brand brand-logo-mini" href="{{ path('accueilIndex') }}"><img src="{{ asset("design/assets/images/logo-mini.svg")}}" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <ul class="navbar-nav navbar-nav-right">

                    <li class="nav-item dropdown border-left">
                        <a href="{{ path('creditAcheter', {'id': app.user.id}) }}" id="openModalAchatCoins" type="button" class="btn btn-outline-warning btn-icon-text">
                            <img src="{{ asset('img/bCoins.jpg') }}" alt="Coin" style="border-radius: 50%; height: 2rem; width: 2rem; margin-right: 5px">
                            {{ app.user.bourse.quantite }}
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" id="profileDropdown" href="#" data-bs-toggle="dropdown">
                            <div class="navbar-profile">
                                {% if app.user.entreprise %}
                                        <img class="img-xs rounded-circle" src="{{ asset("design/pdp.png")}}" alt="">
                                {% elseif app.user.independant %}
                                    {% if app.user.independant.photodeprofil != null %}
                                    <img class="img-xs rounded-circle" src="{{ asset('membre/photodeprofil/') }}{{ app.user.independant.photodeprofil }}" alt="">
                                    {% else %}
                                    <img class="img-xs rounded-circle" src="{{ asset("design/pdp.png")}}" alt="">
                                    {% endif %}
                                {% endif %}
                                {% if app.user.entreprise %}
                                    <p class="mb-0 d-none d-sm-block navbar-profile-name">{{ app.user.entreprise.prenom }} {{ app.user.entreprise.nom }}</p>
                                {% elseif app.user.independant %}
                                    <p class="mb-0 d-none d-sm-block navbar-profile-name">{{ app.user.independant.prenom }} {{ app.user.independant.nom }}</p>
                                {% else %}
                                    <p class="mb-0 d-none d-sm-block navbar-profile-name">{{ app.user.email }}</p>
                                {% endif %}
                                <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                            </div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="profileDropdown">
                            <div class="dropdown-divider"></div>
                            <a href="/logout" class="dropdown-item preview-item" >
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-dark rounded-circle">
                                        <i class="mdi mdi-logout text-danger"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content">
                                    <p class="preview-subject mb-1">Déconnexion</p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-format-line-spacing"></span>
                </button>
            </div>
        </nav>
        <div class="main-panel">
            <div class="content-wrapper">
                <!-- Modal réservation -->
                <div class="modal modalclose fade" id="reservationModal" tabindex="-1" aria-labelledby="reservationModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <iframe id="modalReservation" src="{{ path('creditAcheter', {'id': app.user.id}) }}" style="width: inherit" height="800" width="180" title="Reservation" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen=""></iframe>
                        </div>
                    </div>
                </div>
                {% block body %}{% endblock %}
            </div>
        <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © bootstrapdash.com 2021</span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> <a href="/mentionlegale" target="_blank">Mention légale</a> </span>
            </div>
        </footer>
        <!-- partial -->
    </div>
    <!-- main-panel ends -->
</div>
<!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
<!-- plugins:js -->
<script src="{{ asset("design/assets/vendors/js/vendor.bundle.base.js")}}"></script>
<!-- endinject -->
<!-- Plugin js for this page -->
<script src="{{ asset("design/assets/vendors/chart.js/Chart.min.js")}}"></script>
<script src="{{ asset("design/assets/vendors/progressbar.js/progressbar.min.js")}}"></script>
<script src="{{ asset("design/assets/vendors/jvectormap/jquery-jvectormap.min.js")}}"></script>
<script src="{{ asset("design/assets/vendors/jvectormap/jquery-jvectormap-world-mill-en.js")}}"></script>
<script src="{{ asset("design/assets/vendors/owl-carousel-2/owl.carousel.min.js")}}"></script>
<script src="{{ asset("design/assets/js/jquery.cookie.js")}}" type="text/javascript"></script>
<!-- End plugin js for this page -->
<!-- inject:js -->
<script src="{{ asset("design/assets/js/off-canvas.js")}}"></script>
<script src="{{ asset("design/assets/js/hoverable-collapse.js")}}"></script>
<script src="{{ asset("design/assets/js/misc.js")}}"></script>
<script src="{{ asset("design/assets/js/settings.js")}}"></script>
<script src="{{ asset("design/assets/js/todolist.js")}}"></script>
<!-- endinject -->
<!-- Custom js for this page -->
<script src="{{ asset("design/assets/js/dashboard.js")}}"></script>
<!-- End custom js for this page -->
<!-- Stripe Script -->
<script src="https://js.stripe.com/v3/"></script>
</body>
</html>